@model IEnumerable<prjMVCCoreDemo.ViewModels.CProductViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>線上購物</h1>

<p>
    <a asp-action="CartView">檢視購物車</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        <img src="~/Images/@item.FImagePath" width="180" height="130" />
                        <br />
                        <h3>@Html.DisplayFor(modelItem => item.FName)</h3>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FPrice)
                    </td>
                    <td>
                        @Html.ActionLink("加入Session", "AddToSession", "Shopping", new { id = item.FId })                        
                    </td>
                </tr>
            }
        }
    </tbody>
</table>